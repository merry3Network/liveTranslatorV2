# Gemini API Key (Required for server.js)
API_KEY=your_gemini_api_key_here

# Gemini API Key (Alias used in some guides)
GEMINI_API_KEY=your_gemini_api_key_here

# Deepgram API Key (Required for test-deepgram.js)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# DeepL API Key (Required for standard translations)
DEEPL_API_KEY=your_deepl_api_key_here

# Backend URL (Used by Vite frontend, defaults to localhost:8080)
VITE_BACKEND_URL=ws://localhost:8080

# Server Port (Optional)
PORT=8080

# Mock Mode - Set to 'true' to use mock responses instead of real API calls
# Useful for development/testing without consuming API quota
ENABLE_MOCK=false

# Gemini Rate Limits (Free Tier defaults)
# Requests Per Minute (Free tier: 5)
GEMINI_RPM=5

# Requests Per Day (Free tier: 20)
GEMINI_RPD=20

# DeepL Rate Limits (Free Tier defaults)
# Characters Per Month (Free tier: 500,000)
DEEPL_CPM=500000
